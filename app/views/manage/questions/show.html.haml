.page-header
  %h4 Question Details

%dl.dl-horizontal
  %dt
    Label :
  %dd= @question.text

  %dt
    Section :
  %dd= @question.survey_section.title

  %dt
    Answers :
  %dd
    - @question.answers.each do |answer|
      .field= answer.text

.form-actions.pjax-links
  = link_to 'Back', manage_questions_path, :class => 'btn'
  = link_to 'Edit', edit_manage_question_path(@question), :class => 'btn'
  = link_to 'Delete', manage_question_path(@question), :method => 'delete',
  :class => 'btn btn-danger', :data => { :confirm => 'Are you sure, you want to delete the question?' }