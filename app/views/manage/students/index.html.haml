= link_to 'New', new_manage_student_path, :class => 'btn btn-primary pull-right pjax'

.page-header
  %h1 Students

- if @students.any?
  %table.table.table-striped
    %thead
      %tr
        %th First Name
        %th Last Name
        %th.date Admission Date
        %th.actions
    %tbody
      - @students.each do |student|
        %tr
          %td= link_to student.first_name, manage_student_path(student), :class => 'pjax'
          %td= link_to student.last_name, manage_student_path(student), :class => 'pjax'
          %td= show_date(student.admitted_at)
          %td.actions.pjax-links
            = link_to 'Edit', edit_manage_student_path(student), :class => 'btn btn-mini'
            = link_to 'Delete', manage_student_path(student),  :method => :delete,
            :class => 'btn btn-mini btn-danger', :data => { :confirm => 'Are you sure, you want to delete the student?' }

- else
  .empty No Teacher Information Found.